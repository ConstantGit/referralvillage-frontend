const AGENT_PLANS = [
  {
    tier: 'BASIC',
    name: 'Basic',
    price: 29,
    leads: 10,
    icon: Star,
    features: [
      '10 leads per month',
      'Basic analytics',
      'Email support',
      'Standard matching'
    ]
  },
  {
    tier: 'PRO',
    name: 'Pro',
    price: 59,
    leads: 50,
    icon: Zap,
    popular: true,
